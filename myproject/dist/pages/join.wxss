
.border {
  border-bottom: 1px solid gray;
  margin: 0px 15px 15px 15px;
  padding-left: 5px;
  padding-top: 10px;
}

.textarea {
  border-top: 1px solid gray;
  border-bottom: 1px solid gray;
  border-radius: 10px;
  margin: 20px 10px;
  padding: 10px;
}

.plus {
  width: 50px;
  height: 50px;
}

.view {
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1px solid gray;
  width: 70px;
  height: 70px;
  margin: 10px;
}

.button {
  position: fixed;
  bottom: 0;
  margin-bottom: 6px;
  background-color: floralwhite;
}

.center {
  display: flex;
  justify-content: center;
  align-items: center;
}

.wrap {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}

.image {
  width: 100px;
  height: 120px;
  padding-left: 10px;
}

.back {
  background-image: url('https://img.25pp.com/uploadfile/bizhi/iphone6p/20160804/1470273563945101_390x690.jpeg');
}
