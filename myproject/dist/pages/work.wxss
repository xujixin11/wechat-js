
.view {
  display: flex;
  justify-content: space-around;
  align-items: space-around;
  padding-top: 10px;
  color: gray;
}

.border {
  width: 20px;
  margin-top: 5px;
}

.center {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.image {
  display: flex;
  width: 100%
}

.height {
  height: 350px;
}

.back {
  background-color: black;
}

.white {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 10px;
  color: white;
}

.gray {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: -50px;
  color: gray;
  font-size: 14px;
}

.solid {
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1px solid black;
  background-color: aqua;
  height: 26px;
  width: 100px;
  font-size: 15px;
}

.text {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 10px;
}

.position {
  position: absolute;
  margin-top: 15px;
  right: 0px;
  border: 1px solid white;
  background-color: white;
  font-size: 13px;
  width: 70px;
  height: 26px;
  display: flex;
  justify-content: center;
  align-items: center;
  opacity: 0.5;
}

.head {
  border: 5px solid black;
  border-radius: 50%;
  width: 50px;
  height: 50px;
}

.right {
  position: relative;
  left: 280px;
  top: -55px;
}
