
.view {
  width: 330px;
  height: 230px;
  background-color: #333333;
  display: flex;
  justify-content: center;
  align-items: center;
  opacity: 0.5;
}

.center {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: black;
}

.dashed {
  border: 1px dashed white;
  height: 200px;
  width: 300px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.image {
  width: 60px;
  height: 60px;
}

.margin {
  margin-top: 20px;
}

.bottom {
  display: flex;
  justify-content: center;
  align-items: flex-end;
  border-bottom: 0.5px solid gray;
  color: gray;
  font-size: 30px;
  margin-top: 15px;
  width: 250px;
  height: 45px;
  padding-bottom: 5px;
}

.size {
  width: 26px;
  height: 26px;
  margin-right: -45px;
}

.row {
  display: flex;
  margin-top: 10px;
  height: 200px;
  background-color: #333333;
  padding-left: 20px;
  padding-top: 10px;
  opacity: 0.5;
  color: #666666;
}

.input {
  padding-left: 70px;
  width: 120px;
  height: 30px;
}

.button {
  background-color: #696969;
  width: 100%;
}
