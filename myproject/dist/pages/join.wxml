
  <view class="back" style="height: {{height}}px">
    <view class="border">
      <input placeholder="输入作品的名字"/>
    </view>
    <view class="wrap">
      <block  wx:for="{{src}}" wx:key="index">
        <image class="image" src="{{item}}"/>
      </block>
    </view>
    <view class="view">
      <image class="plus" src="{{plus}}" bindtap="tap"/>
    </view>
    <view class="textarea">
      <textarea placeholder="请输入作品描述"/>
    </view>
    <view class="center">
      <button class="button" plain="true">上传作品</button>
    </view>
  </view>